            <input type="submit" value="Submit">
        </form>
        <script>
            var x = "<%= fruit %>";
            console.log(x);
              var fruit = ("<%- fruit %>").split(",");
               var vegetable = ("<%= vegetable %>").split(",");
               var spice = ("<%= spice %>").split(","); 
               var changeCat = function changeCat(firstList) {
                   var newSel = document.getElementById("category");
                   //if you want to remove this default option use newSel.innerHTML=""
                   newSel.innerHTML="<option value=\"\">Select</option>"; // to reset the second list everytime
                   var opt;

                   //test according to the selected value
                   switch (firstList.options[firstList.selectedIndex].value) {
                       case "fruits":
                           for (var i=0; len=fruit.length, i<len; i++) {
                               opt = document.createElement("option");
                               opt.value = fruit[i];
                               opt.text = fruit[i];
                               newSel.appendChild(opt);
                           }
                           break;
                       case "vegetables":
                           for (var i=0; len=vegetable.length, i<len; i++) {
                               opt = document.createElement("option");
                               opt.value = vegetable[i];
                               opt.text = vegetable[i];
                               newSel.appendChild(opt);
                           }
                       break;
                       case "spices":
                           for (var i=0; len=spice.length, i<len; i++) {
                               opt = document.createElement("option");
                               opt.value = spice[i];
                               opt.text = spice[i];
                               newSel.appendChild(opt);
                       }
                       break;
                   }
               }
        </script>
    </body>
