<html>
    <head>
        <title>List Your Product</title>
    </head>
    <body>
        <form action='/wholeSellerListing' method="post">
            <label>Category</label>
            <select name="meal" id="meal" onchange="changeCat(this);">
                <option value="">Select</option>
                <option value="fruits">fruits</option>
                <option value="vegetables">vegetables</option>
                <option value="spices">spices</option>
            </select>
            <label>Names</label>
            <select name="category" id="category" >
                <% if(1){ %>
                    <% for(var i=0;i<fruit.length;i++){ %>
                        <!-- <option value="">Select</option> -->
                        <option value=""><%= fruit[i] %></option>
                    <% } %>
                <% } else if(2){ %>
                    <% for(var i=0;i<vegetable.length;i++){ %>
                        <!-- <option value="">Select</option> -->
                        <option value=""><%= vegetable[i] %></option>
                    <% } %>
                <% } else if(3){ %>
                    <% for(var i=0;i<spice.length;i++){ %>
                        <!-- <option value="">Select</option> -->
                        <option value=""><%= spice[i] %></option>
                    <% } %>
                <% } %>
            </select>
            
